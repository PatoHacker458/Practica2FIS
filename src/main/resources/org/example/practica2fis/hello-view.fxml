<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.practica2fis.HelloController"
            prefHeight="600" prefWidth="800">

    <left>
        <VBox spacing="30" style="-fx-border-color: black; -fx-border-width: 2;"
                alignment="CENTER">
            <ImageView pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@luismi.jpg" />
                </image>
            </ImageView>

            <HBox spacing="5" alignment="CENTER_LEFT">
                <VBox spacing="10" alignment="CENTER">
                    <!-- Indicador de las áreas -->
                    <VBox alignment="CENTER" spacing="10">
                        <VBox alignment="CENTER">
                            <Rectangle
                                    width="30" height="80"
                                    fill="LIGHTGRAY"
                                    stroke="BLACK"
                                    arcWidth="10" arcHeight="10"/>
                            <Label text="Zona C" />
                        </VBox>
                        <VBox alignment="CENTER">
                            <Rectangle
                                    width="30" height="80"
                                    fill="LIGHTGRAY"
                                    stroke="BLACK"
                                    arcWidth="10" arcHeight="10"/>
                            <Label text="Zona B" />
                        </VBox>
                        <VBox alignment="CENTER">
                            <Rectangle
                                    width="30" height="80"
                                    fill="LIGHTGRAY"
                                    stroke="BLACK"
                                    arcWidth="10" arcHeight="10"/>
                            <Label text="Zona A" />
                        </VBox>
                    </VBox>
                </VBox>
                <!-- Grilla de asientos -->
                <GridPane fx:id="seatGrid" alignment="CENTER" hgap="10" vgap="10">
                </GridPane>
            </HBox>
            <StackPane alignment="CENTER">
                <Rectangle
                        width="200" height="30"
                        fill="GRAY"
                        stroke="BLACK" strokeWidth="2"
                        arcWidth="10" arcHeight="10" />
                <Label text="ESCENARIO" textFill="WHITE" />
            </StackPane>
        </VBox>
    </left>

    <center>
        <VBox style="-fx-border-color: black; -fx-border-width: 2;" spacing="50" alignment="CENTER">
            <VBox alignment="CENTER" spacing="10" >
                <VBox alignment="BASELINE_RIGHT" spacing="5">
                    <Label   text="Asiento 1-24                     " style="-fx-font-size: 16px;"/>
                    <HBox alignment="CENTER" spacing="10">
                        <Label text="Ingrese el número de asiento:" style="-fx-font-size: 20px;"/>
                        <TextField fx:id="seatNumberInput" prefWidth="100" style="-fx-font-size: 20px;"/>
                    </HBox>
                </VBox>
            </VBox>

            <VBox  fx:id="informationSeat" spacing="10" alignment="CENTER" visible="false">
                <Label fx:id="seatInfoLabel" text="Información de Asiento" style="-fx-font-size: 20px;"/>
                <!--
                <HBox alignment="CENTER">
                    <Label text="Número: "/>
                    <Label fx:id="seatNumber"/>
                </HBox>
                <HBox alignment="CENTER">
                    <Label text="Costo: $ "/>
                    <Label fx:id="seatCost"/>
                </HBox>
                -->
                <Button text="Comprar" onAction="#onBuyButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;"/>
            </VBox>
            <VBox  fx:id="notAvailableSeat" spacing="10" alignment="CENTER" visible="false">
                <Label fx:id="availableLbl" text="El asiento no se encuentra disponible, por favor elija otro." textFill="#801a18" style="-fx-font-size: 20px;" />
            </VBox>
        </VBox>
    </center>

    <top>
        <VBox alignment="CENTER" style="-fx-border-color: black; -fx-border-width: 2;">
            <Button fx:id="ExitButton" onAction="#onExitButtonClick"
                    text="Salir" style="-fx-background-color: #af4c4c; -fx-text-fill: white; -fx-font-size: 16px;"/>
        </VBox>
    </top>

</BorderPane>
